<resources>

    <!-- base set of styles that apply to all versions -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>


    <!-- declare the theme name that's actually applied in the manifest file -->
    <!-- extend the base theme to add styles available only with API level 21+ -->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="textview_chatter_input_style" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="button_chatter_solid" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="GreenText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">#00FF00</item>
    </style>


</resources>
