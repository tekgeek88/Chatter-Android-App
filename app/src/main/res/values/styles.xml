<resources>

    <!-- base set of styles that apply to all versions -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/textHintColor</item>
    </style>



    <!--#############     Navigation bar styles     #############-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />



    <!--#############     EditText field base style     #############-->
    <style name="edittext_chatter_basestyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>
    <!--#####  EditText PlainText input type  #####-->
    <style name="edittext_chatter_plaintext" parent="edittext_chatter_basestyle">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:foregroundTint">@color/primaryDarkColor</item>
        <!--<item name="android:textSize">20sp</item>-->
    </style>




    <!--#####  Button Filled with text style  #####-->
    <style name="button_chatter_solid" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--#####  TextView for first and last name's in a list view  #####-->
    <style name="textview_chatter_listitem_name" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--#####  TextView for username in a list view  #####-->
    <style name="textview_chatter_listitem_username" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--#####  TextView for username in a list view  #####-->
    <style name="textview_chatter_accept_cancel" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">32dp</item>
    </style>




    <style name="checkbox_chatter" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>




    <style name="spinner_chatter_theme">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">#303030</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>
