<resources>

    <!-- base set of styles that apply to all versions -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>



    <!--#############     Navigation bar styles     #############-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!--#############     EditText field base style     #############-->
    <style name="edittext_chatter_basestyle" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
    <!--#####  EditText PlainText input type  #####-->
    <style name="edittext_chatter_plaintext" parent="edittext_chatter_basestyle">
        <!--<item name="android:textSize">20sp</item>-->
    </style>




    <!--#####  Button Filled with text style  #####-->
    <style name="button_chatter_solid" parent="AppTheme">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
